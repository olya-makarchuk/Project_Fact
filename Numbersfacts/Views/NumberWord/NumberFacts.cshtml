@model Numbersfacts.Models.ModelNumberFacts;

@{
    ViewData["Title"] = "Факти про числа";
}

<div class="text-center title" style="margin-top:50px; margin-bottom: 30px; font-family:'Comic Sans MS'; color: #05386b; margin-left:190px">
    <h1 class="display-4" style=" font-size:40px; border-radius: 30px; background-color:white; width:700px; border: 1px solid #05386b"><strong>Факти про числа</strong></h1>
</div>
<div class="card col-md-12" style="background-color:#e9e8e9; width:700px; margin-left:200px; margin-top:70px">
    <form asp-action="NumberFacts" asp-controller="NumberWord" method="post">
        <div class="mb-3">
            <label class="form-label" style="font-size: 25px; color:#05386b">Введіть число</label>
            <input type="text" asp-for="Number" class="form-control" style="font-size:20px; font-family:'Comic Sans MS'; text-align:center" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
            <button class="btn btn-primary float-right" type="submit" style="font-size:20px">Пошук</button>
    </form>
</div>
@{if(@Model.Facts.Count!=0)
{

<div class="container" style="margin-top:1em; font-family: stext-alignif; font-size:28px; background: #e9e8e9; border: 3px solid #05386b">
    <nav >
        <p style="margin-left: 40%; font-size:30px; color:#05386b"><strong>Число: @Model.Number</strong></p>
    </nav>
    <nav >
        <p style="margin-left: 35%; margin-top:20px; font-size:30px; color:#05386b">Математичний факт</p>
    </nav>
    <nav >
        <p> @Model.Facts[0]</p>
    </nav>
    <nav >
        <p style="margin-left: 35%; margin-top:20px; font-size:30px; color:#05386b">Загальний факт</p>
    </nav>
    <nav >
        <p> @Model.Facts[1]</p>
    </nav>
</div>

}}
